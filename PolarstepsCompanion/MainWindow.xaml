<Window x:Class="PolarstepsCompanion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PolarstepsCompanion"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.732,0.509">
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" Text="Load Image to show Exif info" TextWrapping="Wrap" VerticalAlignment="Top" Height="27" Width="232" Cursor="Arrow"/>
        <Button Content="Browse" HorizontalAlignment="Left" Margin="242,10,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
        <ScrollViewer Margin="10,42,292,82">
            <TextBlock Name="ImageMetadataBox" Text="{Binding Path=TextBlockContent}" TextWrapping="Wrap" Width="483" Foreground="Black"/>
        </ScrollViewer>
    </Grid>
</Window>
